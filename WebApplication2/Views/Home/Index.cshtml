@using System.Web.Optimization;
@section headerStyles {
    @Styles.Render("~/bundles/bootstrap")
}
@section headerScripts{
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/jqueryui")

    <script type="text/javascript" src="~/Scripts/AngularScripts/AngularScript.js"></script>
    <!--<script type="text/javascript" src="~/Scripts/cors-anywhere.js"></script>-->
}
<div ng-app="TestApp" ng-controller="TestController">
    <!--<div ng-view></div>-->
    <table>
        <thead>
            <tr>
                <th>學號</th>
                <th>姓名</th>
                <th>性別</th>
                <th>出生日期</th>
                <th>學院編號</th>
                <th>成績</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="customer in customers track by $index">
                <!--<td>{{customer.Iden}}</td>-->
                <td>{{customer.School_id}}</td>
                <td>
                    <span ng-if="!editMode('CustName_' + $index)" ng-click="editCustomer($event)" name="CustName">{{customer.Name}}</span>
                    <span ng-if="editMode('CustName_' + $index)"><input type="text" ng-model="customer.Name" ng-blur="initialField()" /></span>
                </td>
                <td>{{customer.Gender}}</td>
                <td>
                    <span ng-if="!editMode('CustBD_' + $index)" ng-click="editCustomer($event)" name="CustBD">{{customer.Birthday}}</span>
                    <span ng-if="editMode('CustBD_' + $index)"><input type="text" ng-model="customer.Birthday" ng-blur="initialField()" /></span>
                </td>
                <td>{{customer.Dep_id}}</td>
                <td>{{customer.Score}}</td>
                <td>
                    <button type="button" ng-click="deleteCustomer($index)">Delete</button>
                </td>
            </tr>
        </tbody>
    </table>
    New Customer: <input type="text" ng-model="NewName" /> Birthday <input type="text" ng-model="NewBirthday" />
    <button type="button" ng-click="addCustomer($event)">Add</button>
    <br />
    <button type="button" ng-click="submitForm($event)">Save</button>
    <br />
    {{TestText}}
    <br />
    <input type="text" ng-model="TestText" />
</div>